app.post("/form/action1", function(req, res){
  // post 방식 전송된 파라미터 읽어오기
  var email = req.body.email; // input의 name 속성의 value 가 email 이어서 var email 해준것. post 방식으로 전송된 것은 요청객체의 body에 들어있어
  // 콘솔에 출력해보기
  console.log("email : "+email);
  // 간단 문자열 응답하기
  res.end("post /form/action1 ok!")
});
